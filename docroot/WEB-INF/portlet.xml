<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
  <portlet>
    <description>Places an HTML IFrame with reverse proxied URLs inside a portlet for easily
      hosting of other web application. 
      Based on: org.apache.portals.applications.webcontent.portlet.IFrameGenericPortlet
    </description>
	<portlet-name>reverse-proxy</portlet-name>
	<display-name>Reverse Web Proxy</display-name>
    <portlet-class>
      kmworks.liferay.amorc.portlet.ReverseProxyIFramePortlet
    </portlet-class>
    <init-param>
      <name>edit-jsp</name>
      <value>/WEB-INF/view/edit-prefs.jsp</value>
    </init-param>
    <init-param>
      <name>portlet-icon</name>
      <value>applications-internet.png</value>
    </init-param>
    <expiration-cache>300</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>edit</portlet-mode>
      <portlet-mode>view</portlet-mode>
      <!-- portlet-mode>HELP</portlet-mode-->
    </supports>
    <supported-locale>de</supported-locale>
	<portlet-info>
		<title>Reverse Web Proxy Portlet</title>
		<short-title>Reverse Web Proxy Portlet</short-title>
		<keywords>Reverse Web Proxy Portlet</keywords>
	</portlet-info>
    <portlet-preferences>
      <preference>
        <name>EDITABLEPREFS</name>
        <value>TITLE, SRC, PROXYREMOTEURL, PROXYLOCALPATH, WIDTH, HEIGHT, MAX-WIDTH, MAX-HEIGHT, SCROLLING, AUTORESIZE, VISITLASTPAGE</value>
      </preference>
      <preference>
        <name>TITLE</name>
        <value></value>
      </preference>
      <preference>
        <name>SRC</name>
        <value>http://xyz.local/</value> 
      </preference>
      <preference>
        <name>PROXYREMOTEURL</name>
        <value>http://xyz.local/</value> 
      </preference>
      <preference>
        <name>PROXYLOCALPATH</name>
        <value>${contextPath}/rproxy/xyz_local/</value>
      </preference>
      <preference>
        <name>AUTORESIZE</name>
        <value>false</value>
      </preference>
      <preference>
        <name>VISITLASTPAGE</name>
        <value>false</value>
      </preference>
      <!--
        Don't specify a HEIGHT if you want a normal filled out layout
        because percentage values result in the content not to be
        displayed on IE6. Specific values are ok though.
      -->
      <preference>
        <name>HEIGHT</name>
        <value>600</value>
      </preference>
      <preference>
        <name>WIDTH</name>
        <value>100%</value>
      </preference>
      <preference>
        <name>MAX-HEIGHT</name>
        <value>800</value>
      </preference>
      <preference>
        <name>MAX-WIDTH</name>
        <value>100%</value>
      </preference>
      <preference>
        <name>SCROLLING</name>
        <value>AUTO</value>
      </preference>
    </portlet-preferences>
    <security-role-ref>
      <role-name>administrator</role-name>
    </security-role-ref>
  </portlet>
	
</portlet-app>